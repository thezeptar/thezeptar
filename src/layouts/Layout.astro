---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="author" content="Zeptar" />
        <meta name="generator" content={Astro.generator} />
        <meta name="keywords" content="zeptar, portfolio, programming" />
        <meta name="abstract" content="A small portfolio of a developer." />
        <meta name="theme-color" content="#1e1233" />
        <meta name="description" content="Zeptar's portfolio homepage" />
        <meta name="twitter:card" content="summary_large_image" />
        <meta property="og:image" content="/images/banner.png" />
        <meta property="og:image:alt" content="Banner" />
        <meta property="og:image:width" content="2500px" />
        <meta property="og:image:height" content="750px" />

        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="apple-touch-icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="manifest" crossorigin="use-credentials" href="/site.webmanifest" />
        <link rel="canonical" href="https://zeptar.vercel.app/#" />
        <link rel="sitemap" href="/sitemap-index.xml" />

        <title>{title} â€” Zeptar</title>
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    html {
        scroll-behavior: smooth;
        font-family: 'Raleway', sans-serif;
    }

    body {
        width: 100%;
        min-height: 100vh;
    }

    ::selection {
        color: white;
        background: rgba(111, 0, 255, 0.451);
    }

    @font-face {
        font-family: 'Raleway';
        src: url('/fonts/Raleway/Raleway-ExtraLight.woff2') format('woff2'), url('/fonts/Raleway/Raleway-ExtraLight.woff') format('woff');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
</style>
